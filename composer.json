{
    "name": "slava-basko/identity-server",
    "description": "Identity Server",
    "authors": [
        {
            "name": "Slava Basko",
            "email": "basko.slava@gmail.com"
        }
    ],
    "keywords": ["identity server"],
    "type": "app",
    "license": "proprietary",
    "require": {
        "php": "^7.1.3",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "symfony/console": "4.3.*",
        "symfony/dotenv": "4.3.*",
        "symfony/flex": "^1.1",
        "symfony/framework-bundle": "4.3.*",
        "symfony/yaml": "4.3.*",

        "doctrine/orm": "^2.6",
        "doctrine/doctrine-bundle": "1.11.2",
        "doctrine/doctrine-cache-bundle": "1.3.5",
        "symfony/monolog-bundle": "v3.4.0",
        "ramsey/uuid": "3.8.0",
        "simple-bus/symfony-bridge": "v5.3.0",
        "respect/validation": "1.1.31",
        "slava-basko/identity-server-sdk": "dev-master"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts",
            "App\\Utils\\PostInstal::check"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "4.3.*"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^8.2"
    }
}
